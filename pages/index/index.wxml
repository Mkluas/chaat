<!--index.wxml-->
<view class="page">

  <view wx:if="{{teams.length < 1}}">
    <text class='welcome'>欢迎使用 SGNL</text>
  </view>
  <view class='team-list' wx:else>
    <navigator wx:for="{{teams}}" wx:key="{{item.teamId}}" class='team' url="/pages/chat/chat?chatTo={{item.teamId}}">
      <view class='groupName'>
        <open-data type="groupName" open-gid="{{item.groupId}}" />
      </view>
    </navigator>
  </view>

  <text class='tip' wx:if="{{teams.length < 1}}">请点击下方按钮开始会话</text>
  <button open-type='share'>
    <image class='create'  src='/images/create.png'></image> 
  </button>
</view>
