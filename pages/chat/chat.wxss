/* pages/chat/chat.wxss */
.hide {
  display: none;
}

.chat-input {
  position: fixed;
  top: 20vh;
  width: 100vw;
  height: 10vh;
  text-align: center;
  color: #6036AA;
}

.chat-input input {
  height: 10vh;
  line-height: 10vh;
  font-size: 8vh;
}

.bg {
  width: 100vw;
  min-height: 100vh;
}

.msg-list {
  width: 100%;
  height: 85vh
}

.user-input {
  height: 50vh;
}

.msg {
  padding: 0 5vw;
  margin-bottom: 5px;
  font-size: 4.5vw;
}

.barrage {
  z-index: 3;
  height: 80%;
  width: 100%;
  position: absolute;
}

.barrage .text{
  position: absolute;
  font-weight: 600;
  white-space:nowrap;/* 防止向下换行*/
  backface-visibility:hidden;
  perspective: 1000;
}


/**定义从右边向左边的移动的动画**/
@keyframes first{
  from{left: 100vw;}
  to{left: -500vw;}
}

.btn-block {
  position: fixed;
  display: flex;
  align-content: center;
  justify-content: space-between;
  bottom: 6vw;
  width: 100vw;
  height: 15vw;
}

.btn-block image {
  width: 15vw;
  height: 15vw;
  padding: 0 6vw;
}
