.hide {
  display: none;
}

.chat-input {
  position: fixed;
  top: 20vh;
  width: 100vw;
  height: 9vh;
  text-align: center;
  color: #6036AA;
  z-index: 999;
  background-color: transparent;
}

.chat-input .bottom {
  position: absolute;
  top: 0;
  left: 0;
  height: 9vh;
  width: 100vw;
  background-color: white;
  opacity: 0.9;
}

.chat-input input {
  height: 9vh;
  line-height: 9vw;
  font-size: 9vw;
  width: 90vw;
  padding: 0 5vw;
  background-color: transparent;
}

.bg {
  width: 100vw;
  min-height: 100vh;
}

.bg-blur {
  opacity: 0.3;
}

.theme {
  position: fixed;
  z-index: 0;
  height: 100vh;
  width: 100vw;
  text-align: center;
 
}

.theme-text {
  margin-top: 10vh;
  font-size: 6vh;
  opacity: 0.3;
  display: inline-block;
  font-family: 'kongxin';
  background-color: #6036AA;
  padding: 0.5vw 5vw;
  color: white;
}

.msg-list {
  position: relative;
  z-index: 88;
  width: 100%;
  height: 100vh
}

.msg {
  padding: 0 5vw;
  margin-bottom: 5px;
  font-size: 4.5vw;
  font-family: 'fangzheng';
  display: inline-block;
  position: absolute;
}

.user-input {
  height: 50vh;
}


.barrage {
  z-index: 3;
  height: 80%;
  width: 100%;
  position: absolute;
}

.barrage .text{
  position: absolute;
  font-weight: 600;
  white-space:nowrap;/* 防止向下换行*/
  backface-visibility:hidden;
  perspective: 1000;
}


/**定义从右边向左边的移动的动画**/
@keyframes first{
  from{left: 100vw;}
  to{left: -500vw;}
}

.btn-block {
  position: fixed;
  display: flex;
  align-content: center;
  justify-content: space-between;
  background-color: transparent;
  bottom: 6vw;
  width: 88vw;
  height: 15vw;
  z-index: 99;
  padding: 0 6vw;
}

.btn-block image {
  width: 15vw;
  height: 15vw;
}


.btn-block .submit {
  background-color: transparent;
  border: none;
  outline: none;
  display: inline;
}

.btn-block .submit::after{
  border: none;
}